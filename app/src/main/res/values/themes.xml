<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MoveCax" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#B5B2B2</item>
        <item name="colorPrimaryVariant">@color/black</item>
    </style>

    <style name="Theme.MoveCax" parent="Base.Theme.MoveCax" />

    <style name="Theme.MoveCax.Fullscreen" parent="Theme.MoveCax">
        <item name="android:actionBarStyle">@style/Widget.Theme.MoveCax.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MoveCax.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">#B5B2B2</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black   </item>
    </style>
</resources>