<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.PerfilFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Título: Mi perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start|top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/round_navigationtop"
                android:paddingStart="16dp"
                android:paddingTop="30dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi Perfil"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:textSize="40sp"/>

                <!-- Subtítulo: Actualiza tus datos personales -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actualiza tus datos personales"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <!-- ImageView -->
                <ImageButton
                    android:id="@+id/btnCambiarFotoPerfil"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_action_perfil"
                    android:layout_gravity="end|top"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="-70dp"
                    android:padding="10dp"
                    android:background="@drawable/rounded_button"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logoutUser"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_perfil"
                android:gravity="center"
                android:orientation="vertical"
                android:overScrollMode="ifContentScrolls"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Nombre"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="#CCCCCC"
                    app:boxStrokeWidth="2dp">

                    <TextView
                        android:id="@+id/etNombrePerfil"
                        style="@style/Widget.AppCompat.AutoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounded_background"
                        android:drawablePadding="10dp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo de Apellidos -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Apellidos"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="#CCCCCC"
                    app:boxStrokeWidth="2dp">

                    <TextView
                        android:id="@+id/etApellidosPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounded_background"
                        android:drawablePadding="10dp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo de Correo -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Correo"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="#CCCCCC"
                    app:boxStrokeWidth="2dp">

                    <TextView
                        android:id="@+id/etCorreoPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounded_background"
                        android:drawablePadding="10dp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo de Contraseña -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Contraseña"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="#CCCCCC"
                    app:boxStrokeWidth="2dp">

                    <TextView
                        android:id="@+id/etPasswordPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounded_background"
                        android:drawableEnd="@drawable/ic_action_editar"
                        android:drawablePadding="10dp"
                        android:onClick="mostrarPopupEditarContraseña"
                        android:editable="false"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo de Fecha de Nacimiento -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Fecha de Nacimiento"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="#CCCCCC"
                    app:boxStrokeWidth="2dp">

                    <TextView
                        android:id="@+id/etFechaNacimientoPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounded_background"
                        android:drawablePadding="10dp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo de Sexo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Sexo"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="#CCCCCC"
                    app:boxStrokeWidth="2dp">

                    <TextView
                        android:id="@+id/etSexoPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounded_background"
                        android:drawablePadding="10dp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/closeSession"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/red_modified"
                android:text="Cerrar Sesión"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2023 MoveCax | Versión 1.0.0"
                android:textColor="@color/quantum_grey"
                android:layout_gravity="bottom|center"
                android:layout_margin="85dp"/>
        </LinearLayout>



    </ScrollView>

</LinearLayout>

